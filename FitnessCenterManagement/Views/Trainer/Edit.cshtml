@model FitnessCenterManagement.Models.Trainer

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Custom styling for the Edit page */
    h1, h4 {
        color: #e74c3c;
    }

    hr {
        border-color: #3498db; /* Horizontal rule color */
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        color: #e74c3c; /* Label color */
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #3498db; /* Form control border color */
        border-radius: 4px;
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #e74c3c; /* Form control border color on focus */
        }

    .btn-primary {
        background-color: #e74c3c; /* Primary button background color */
        color: #fff; /* Primary button text color */
        border: 1px solid #e74c3c; /* Primary button border color */
    }

        .btn-primary:hover {
            background-color: #3498db; /* Primary button background color on hover */
            border-color: #3498db; /* Primary button border color on hover */
        }

    .text-danger {
        color: #e74c3c; /* Text color for validation messages */
    }

    a:hover {
        color: #3498db; /* Link color */
    }

    a {
        color: #e74c3c; /* Hover link color */
    }
</style>

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainerID" />
            <div class="form-group">
                <label asp-for="TrainerName" class="control-label">Name of the Trainer</label>
                <input asp-for="TrainerName" class="form-control" />
                <span asp-validation-for="TrainerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certification" class="control-label"></label>
                <input asp-for="Certification" class="form-control" />
                <span asp-validation-for="Certification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperienceYears" class="control-label">Experience(in yrs)</label>
                <input asp-for="ExperienceYears" class="form-control" />
                <span asp-validation-for="ExperienceYears" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
