@model FitnessCenterManagement.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Custom styling for the Details page */
    h4 {
        color: #e74c3c; /* Heading color */
    }

    hr {
        border-color: #e74c3c; /* Horizontal rule color */
    }

    .row {
        margin: 20px 0;
    }

    dl {
        margin-bottom: 20px;
    }

    dt, dd {
        padding: 8px;
    }

    dt {
        font-weight: bold;
        color: #e74c3c; /* Term color */
    }

    dd {
        color: #555; /* Definition color */
    }

    a {
        color: #e74c3c; /* Link color */
        margin-right: 10px;
    }

        a:hover {
            color: #3498db; /* Hover link color */
        }
</style>

<div>
    <h4>Trainer Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label for="TrainerName">Trainer Name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
        <dt class="col-sm-2">
            <label for="Specialization">Specialization</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)
        </dd>
        <dt class="col-sm-2">
            <label for="Certification">Certification</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certification)
        </dd>
        <dt class="col-sm-2">
            <label for="ExperienceYears">Experience(in yrs)</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExperienceYears)
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TrainerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
