@model FitnessCenterManagement.Models.Class

@{
    ViewData["Title"] = "Delete";
}
<style>
    /* Custom styling for the Delete page */
    h1, h3, h4 {
        color: #e74c3c; /* Heading color */
    }

    hr {
        border-color: #e74c3c; /* Horizontal rule color */
    }

    .row {
        margin: 20px 0;
    }

    dl {
        margin-bottom: 20px;
    }

    dt, dd {
        padding: 8px;
    }

    dt {
        font-weight: bold;
        color: #e74c3c; /* Term color */
    }

    dd {
        color: #555; /* Definition color */
    }

    .btn-danger {
        background-color: #e74c3c; /* Delete button background color */
        color: #fff; /* Delete button text color */
        border: 1px solid #e74c3c; /* Delete button border color */
    }

        .btn-danger:hover {
            background-color: #3498db; /* Delete button background color on hover */
            color: #fff; /* Delete button text color on hover */
            border-color: #3498db; /* Delete button border color on hover */
        }

    a {
        color: #e74c3c; /* Link color */
        margin-right: 10px;
    }

        a:hover {
            color: #3498db; /* Hover link color */
        }
</style>


<h3>Are you sure you want to cancel this class?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label for="ClassName">Class</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class="col-sm-2">
            <label for="Schedule">Class Schedule</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule)
        </dd>
        <dt class="col-sm-2">
            <label for="TrainerID">Trainer ID</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerID)
        </dd>
        <dt class="col-sm-2">
            <label for="MaxCapacity">Max Capacity</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
        <dt class="col-sm-2">
            <label for="RoomNumber">Room no.</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
