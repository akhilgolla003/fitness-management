@model FitnessCenterManagement.Models.Class

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Custom styling for the Details page */
    h4 {
        color: #e74c3c; /* Heading color */
    }

    hr {
        border-color: #e74c3c; /* Horizontal rule color */
    }

    .row {
        margin: 20px 0;
    }

    dl {
        margin-bottom: 20px;
    }

    dt, dd {
        padding: 8px;
    }

    dt {
        font-weight: bold;
        color: #e74c3c; /* Term color */
    }

    dd {
        color: #555; /* Definition color */
    }

    a {
        color: #e74c3c; /* Link color */
        margin-right: 10px;
    }

        a:hover {
            color: #3498db; /* Hover link color */
        }
</style>

<div>
    <h4>Class Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label for="ClassName">Class</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class="col-sm-2">
            <label for="Schedule">Class Schedule</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule)
        </dd>
        <dt class="col-sm-2">
            <label for="TrainerID">Assigned Trainer</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerID)
        </dd>
        <dt class="col-sm-2">
            <label for="MaxCapacity">Capacity</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
        <dt class="col-sm-2">
            <label for="RoomNumber">Room Number</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClassID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
